<UserControl xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="using:Adrenalin.ViewModels"
	xmlns:conv="using:Adrenalin.Converters"
	x:Class="Adrenalin.Views.PackageDetailView" x:DataType="vm:PackagesViewModel">
	<ScrollViewer>
		<StackPanel Margin="20" Spacing="20">
			<TextBlock Text="{Binding SelectedPackageDetail.Title}" FontSize="24" FontWeight="Bold" />

			<Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto" Margin="0,20,0,0">
				<TextBlock Grid.Row="0" Grid.Column="0"
					Text="{Binding SelectedPackageDetail.NameLabel}" VerticalAlignment="Center"
					Margin="0,0,10,0" />
				<TextBox Grid.Row="0" Grid.Column="1"
					Text="{Binding SelectedPackageDetail.Package.Name}" />

				<TextBlock Grid.Row="1" Grid.Column="0"
					Text="{Binding SelectedPackageDetail.PriceLabel}" VerticalAlignment="Center"
					Margin="0,0,10,0" />
				<TextBox Grid.Row="1" Grid.Column="1"
					Text="{Binding SelectedPackageDetail.Package.Price, StringFormat=F2}" />

				<TextBlock Grid.Row="2" Grid.Column="0"
					Text="{Binding SelectedPackageDetail.DescriptionLabel}" VerticalAlignment="Top"
					Margin="0,0,10,0" />
				<TextBox Grid.Row="2" Grid.Column="1"
					Text="{Binding SelectedPackageDetail.Package.Description}" AcceptsReturn="True"
					TextWrapping="Wrap" Height="100" />
			</Grid>

			<!-- Error Message Display -->
			<Border Background="#FFF0F0" BorderBrush="Red" BorderThickness="1" CornerRadius="4"
				Margin="0,10,0,0" Padding="10"
				IsVisible="{Binding SelectedPackageDetail.ErrorMessage, Converter={x:Static conv:StringNotEmptyConverter.Instance}}">
				<TextBlock Text="{Binding SelectedPackageDetail.ErrorMessage}"
					Foreground="Red"
					FontWeight="Bold"
					TextWrapping="Wrap" />
			</Border>

			<StackPanel Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
				<Button Content="{Binding SelectedPackageDetail.SaveLabel}"
					Command="{Binding SelectedPackageDetail.Save}" />
				<Button Content="{Binding SelectedPackageDetail.CancelLabel}"
					Command="{Binding SelectedPackageDetail.Cancel}" />
			</StackPanel>
		</StackPanel>
	</ScrollViewer>
</UserControl>
