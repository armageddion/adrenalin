<Window xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="using:Adrenalin.ViewModels"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
	x:Class="Adrenalin.Views.SetupView"
	x:DataType="vm:SetupViewModel"
	Title="Adrenalin - Setup"
	Width="400" Height="300"
	WindowStartupLocation="CenterScreen">

	<Design.DataContext>
		<vm:SetupViewModel />
	</Design.DataContext>

	<Grid>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
			<TextBlock Text="Adrenalin CRM Setup" FontSize="24" FontWeight="Bold"
				HorizontalAlignment="Center" />
			<TextBlock Text="Select or create a database to get started."
				HorizontalAlignment="Center" TextWrapping="Wrap" />

			<StackPanel Spacing="10" Orientation="Vertical">
				<Button Content="Select Database File" Command="{Binding SelectDatabaseCommand}"
					HorizontalAlignment="Stretch" />
				<Button Content="Create New Database" Command="{Binding CreateNewDatabaseCommand}"
					HorizontalAlignment="Stretch" />
			</StackPanel>

			<TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center"
				TextWrapping="Wrap" IsVisible="{Binding IsErrorVisible}" />
		</StackPanel>
	</Grid>
</Window>
