<Window xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="using:Adrenalin.ViewModels"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:views="using:Adrenalin.Views"
	mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
	x:Class="Adrenalin.Views.MainWindow"
	x:DataType="vm:MainWindowViewModel"
	Title="Adrenalin">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<Window.KeyBindings>
		<KeyBinding Gesture="Ctrl+F" Command="{Binding ShowSearchCommand}" />
	</Window.KeyBindings>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!-- Content Area -->
		<TabControl
			Grid.Row="1"
			SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
		>
			<TabItem Header="{Binding HomeTabLabel}" FontSize="14" FontWeight="SemiBold">
				<views:DashboardView DataContext="{Binding DashboardViewModel}" />
			</TabItem>
			<TabItem Header="{Binding MembersTabLabel}" FontSize="14" FontWeight="SemiBold">
				<views:MembersView DataContext="{Binding MembersViewModel}" />
			</TabItem>
			<TabItem Header="{Binding VisitsTabLabel}" FontSize="14" FontWeight="SemiBold">
				<views:VisitsView DataContext="{Binding VisitsViewModel}" />
			</TabItem>
			<TabItem Header="{Binding PackagesTabLabel}" FontSize="14" FontWeight="SemiBold">
				<views:PackagesView DataContext="{Binding PackagesViewModel}" />
			</TabItem>
			<TabItem Header="{Binding SettingsTabLabel}" FontSize="14" FontWeight="SemiBold">
				<views:SettingsView DataContext="{Binding SettingsViewModel}" />
			</TabItem>
		</TabControl>

		<!-- Search Button overlaid on tab strip -->
		<Button Grid.Row="1"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Content="ðŸ”"
			x:Name="SearchButton"
			Command="{Binding ShowSearchCommand}"
			ToolTip.Tip="Search Members (Ctrl+F)"
			Background="Transparent"
			BorderThickness="0"
			FontSize="16"
			Padding="15,10"
			Margin="0,0,20,0" />
	</Grid>

</Window>
