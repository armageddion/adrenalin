{
	"name": "adrenalin",
	"type": "module",
	"main": "main.js",
	"version": "1.1.3",
	"author": "Armageddion",
	"description": "Adrenalin CRM application",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/armageddon/adrenalin"
	},
	"scripts": {
		"build:server": "esbuild src/server.ts --bundle --platform=node --format=esm --target=node20 --outfile=dist/server.js --external:@libsql/client",
		"css": "npx @tailwindcss/cli -i ./src/assets/styles.css -o ./public/styles.css",
		"dev:css": "npm run css -- --watch",
		"dev": "concurrently \"npm run dev:css\" \"tsx watch src/server.ts\"",
		"lint": "biome check --write --unsafe",
		"typecheck": "tsc --noEmit",
		"start": "tsx src/server.ts",
		"setup:db": "node scripts/db.js init",
		"setup:dependencies": "node scripts/dependencies.js",
		"setup:fonts": "npx -y google-fonts-offline outDir=public/fonts \"http://fonts.googleapis.com/css?family=Oxanium\"",
		"setup:icon": "npx -y svg-to-ico src/assets/logo.svg public/favicon.ico && copy src/assets/logo.svg public/logo.svg",
		"setup": "npm run css && npm run setup:db && npm run setup:dependencies && npm run setup:fonts && npm run setup:icon",
		"backup:db": "node scripts/backup-db.js",
		"test:e2e": "NODE_ENV=test start-server-and-test 'tsx src/server.ts' $([ -f adrenalin.pem ] && [ -f adrenalin.key ] && echo https://localhost:3001 || echo http://localhost:3001) 'cypress run --config-file test/cypress.config.ts'",
		"test:unit": "NODE_ENV=test vitest run --config test/vitest.config.ts",
		"test:integration": "NODE_ENV=test vitest run --config test/vitest.integration.config.ts",
		"test": "npm run test:unit && npm run test:integration && npm run test:e2e"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.7",
		"@intlify/hono": "^2.0.0",
		"@libsql/client": "^0.15.15",
		"alpinejs": "^3.15.2",
		"bcrypt": "^6.0.0",
		"hono": "^4.10.8",
		"htmx.org": "^2.0.8",
		"signature_pad": "^5.1.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bcrypt": "^6.0.0",
		"@types/jsdom": "^27.0.0",
		"@types/node": "^25.0.0",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^4.0.15",
		"concurrently": "^9.2.1",
		"cypress": "^15.7.1",
		"esbuild": "^0.27.1",
		"jsdom": "^27.3.0",
		"nodemon": "^3.1.11",
		"start-server-and-test": "^2.1.3",
		"supertest": "^7.1.4",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.21.0",
		"typed-htmx": "^0.3.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	}
}
